<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bb.gallery.dao.GalleryDao">


  <insert id="insertGallery" parameterType="GalleryDto">
    INSERT INTO GALLERY VALUES (
      GALLERY_SEQ.NEXTVAL,
      #{title},
      #{contents},
      #{original},
      #{renamed},
      0
    )
  </insert>

  <select id="getGalleryList" resultType="GalleryDto">
    SELECT * FROM GALLERY ORDER BY NO
  </select>

  <select id="viewGallery" resultType="GalleryDto" parameterType="Integer">
    SELECT * FROM GALLERY WHERE NO = #{no}
  </select>

  <insert id="insertGalleryReply" parameterType="ReplyDto">
    INSERT INTO GALLERY_COMMENT VALUES (
      GALLERY_COMMENT_SEQ.NEXTVAL,
      #{galleryId},
      #{comments}
    )
  </insert>
  <select id="getGalleryReply" resultType="ReplyDto" parameterType="Integer">
    SELECT * FROM GALLERY_COMMENT WHERE GALLERYID = #{galleryId} ORDER BY NO
  </select>
  <delete id="deleteReply" parameterType="Integer">
    DELETE FROM GALLERY_COMMENT WHERE NO = #{no}
  </delete>
</mapper>